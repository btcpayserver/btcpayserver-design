{
  "name": "btcpayserver-design",
  "description": "BTCPay Server Design System",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Dennis Reimann <mail@dennisreimann.de>",
  "homepage": "https://github.com/btcpayserver/btcpayserver-design/",
  "bugs": "https://github.com/btcpayserver/btcpayserver-design/issues",
  "repository": "btcpayserver/btcpayserver-design",
  "keywords": [
    "BTCPay Server"
  ],
  "scripts": {
    "clean": "rimraf dist generated && mkdir -p dist/styles dist/scripts/bootstrap-v5 generated",
    "start": "npm run clean && npm-run-all -p 'start:*'",
    "start:build": "npm-run-all -p 'build:* -- --serve --watch'",
    "start:static": "onchange -k 'src/static/**' -- npm run build:static",
    "start:styles": "npm-run-all -p 'start:styles:*'",
    "start:styles:main": "onchange -k 'postcss/main/*' 'src/styles/main/**' 'src/components/**/*.css' -- npm run build:styles:main",
    "start:styles:variables": "onchange -k 'postcss/variables/*' 'src/styles/variables/**' 'src/design/**' -- npm run build:styles:variables",
    "start:bootstrap": "onchange -k 'src/bootstrap/**' 'tasks/generate-bootstrap.js' -- npm run build:bootstrap",
    "build": "npm run clean && NODE_ENV=production npm-run-all -p 'build:*'",
    "build:static": "cp -r src/static/* dist && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js* dist/scripts/bootstrap-v5 && :",
    "build:patternlib": "uiengine build",
    "build:styles": "npm-run-all -s 'build:styles:main' 'build:styles:variables' && :",
    "build:styles:main": "postcss --config postcss/main --output dist/styles/btcpayserver-main.css src/styles/main/index.css",
    "build:styles:variables": "echo '' | postcss --config postcss/variables && postcss --config postcss/main --output generated/theme.css src/styles/variables/theme.css && cat generated/*.css > dist/styles/btcpayserver-variables.css",
    "build:bootstrap": "npm run generate-bootstrap && :",
    "optimize": "npm-run-all -p optimize:*",
    "optimize:styles": "csso dist/styles/btcpayserver-main.css --output dist/styles/btcpayserver-main.css",
    "prod": "npm-run-all build",
    "generate-color-palette": "node ./tasks/generate-color-palette.js",
    "generate-bootstrap": "node ./tasks/generate-bootstrap.js"
  },
  "devDependencies": {
    "@uiengine/adapter-html": "3.1.8",
    "@uiengine/core": "3.1.8",
    "autoprefixer": "10.2.5",
    "bootstrap": "5.0.0-beta3",
    "csso-cli": "3.0.0",
    "import-fresh": "3.3.0",
    "node-sass": "5.0.0",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "postcss": "8.2.13",
    "postcss-cli": "8.3.1",
    "postcss-custom-properties": "11.0.0",
    "postcss-extend": "1.0.5",
    "postcss-import": "14.0.1",
    "postcss-nesting": "8.0.0",
    "postcss-prettify": "0.3.4",
    "rimraf": "3.0.2"
  }
}
