{
  "name": "btcpayserver-design",
  "description": "BTCPay Server Design System",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Dennis Reimann <mail@dennisreimann.de>",
  "homepage": "https://github.com/btcpayserver/btcpayserver-design/",
  "bugs": "https://github.com/btcpayserver/btcpayserver-design/issues",
  "repository": "btcpayserver/btcpayserver-design",
  "keywords": [
    "BTCPay Server"
  ],
  "scripts": {
    "clean": "rimraf dist generated && mkdir -p dist/styles dist/scripts/bootstrap generated",
    "start": "cross-env NODE_ENV=development npm run clean && run-p 'start:*'",
    "start:build": "run-p 'build:* -- --serve --watch'",
    "start:icons": "onchange -k 'src/icons/**/*.svg' 'tasks/generate-icon-sprite.js' -- npm run build:icons",
    "start:supporters": "onchange -k 'src/supporters/**/*.svg' 'tasks/generate-supporters-sprite.js' -- npm run build:supporters",
    "start:static": "onchange -k 'src/static/**' -- npm run build:static",
    "start:styles": "run-p 'start:styles:*'",
    "start:styles:main": "onchange -k 'postcss.config.js' 'src/styles/main/**' 'src/components/**/*.css' -- npm run build:styles:main",
    "start:styles:variables": "onchange -k 'src/styles/variables/**' 'src/design/**' -- npm run build:styles:variables",
    "start:bootstrap": "onchange -k 'src/bootstrap/**' 'tasks/generate-bootstrap.js' -- npm run build:bootstrap",
    "build": "npm run clean && cross-env NODE_ENV=production run-p 'build:*'",
    "build:static": "cp -r src/static/* dist && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js* dist/scripts/bootstrap && :",
    "build:patternlib": "uiengine build",
    "build:icons": "node tasks/generate-icon-sprite.js",
    "build:supporters": "node ./tasks/generate-supporters-sprite.js",
    "build:styles": "run-s 'build:styles:*' && :",
    "build:styles:main": "postcss --output dist/styles/btcpayserver-main.css src/styles/main/index.css",
    "build:styles:variables": "echo '' | npm run generate-design && postcss --output generated/theme.css src/styles/variables/theme.css && sed -i 's/\t/  /g' generated/design.css && cat generated/*.css | sed -z 's/\\n}\\n:root {//' > dist/styles/btcpayserver-variables.css",
    "build:bootstrap": "npm run generate-bootstrap && :",
    "optimize": "run-p optimize:*",
    "optimize:styles": "run-p optimize:styles:*",
    "optimize:styles:main": "csso --output dist/styles/btcpayserver-main.min.css dist/styles/btcpayserver-main.css",
    "optimize:styles:variables": "csso --output dist/styles/btcpayserver-variables.min.css dist/styles/btcpayserver-variables.css",
    "optimize:styles:bootstrap": "csso --output dist/styles/btcpayserver-bootstrap.min.css dist/styles/btcpayserver-bootstrap.css ",
    "prod": "run-s build optimize",
    "generate-color-palette": "node ./tasks/generate-color-palette.js",
    "generate-bootstrap": "node ./tasks/generate-bootstrap.js",
    "generate-design": "node ./tasks/generate-design.js",
    "copy-assets": "bash ./tasks/copy-assets-to-targets.sh",
    "build-and-copy": "run-s clean build build:static copy-assets",
    "prettier": "prettier --write '**/*.{js,json,md}'"
  },
  "devDependencies": {
    "@uiengine/adapter-html": "3.3.13",
    "@uiengine/core": "3.3.13",
    "autoprefixer": "10.4.14",
    "bootstrap": "5.3.0",
    "color": "4.2.3",
    "cross-env": "7.0.3",
    "csso-cli": "4.0.2",
    "glob": "10.3.1",
    "import-fresh": "3.3.0",
    "node-sass": "9.0.0",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "postcss": "8.4.24",
    "postcss-cli": "10.1.0",
    "postcss-import": "15.1.0",
    "postcss-mixins": "9.0.4",
    "postcss-nesting": "11.3.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "svgstore": "3.0.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
